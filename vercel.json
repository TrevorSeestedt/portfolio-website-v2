{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/login",
      "destination": "/api/login"
    },
    {
      "source": "/callback",
      "destination": "/api/callback"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
} 