{
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs22.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/login",
      "destination": "/api/login"
    },
    {
      "source": "/callback",
      "destination": "/api/callback"
    }
  ]
} 